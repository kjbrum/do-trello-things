{
  "name": "Do Trello Things",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Enable a bunch of different options for doing Trello tasks.",
  "homepage_url": "http://kylebrumm.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "*://*.trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
